package com.company;

public class Password {
    private String password = "";

    public String getPassword() {
        return this.password;
    }

    public void outputPassword() {
        System.out.println("Your new password is: " + this.getPassword());
    }

    public void changePassword(String newPassword) throws TooLongPasswordException {
        if (newPassword.length() <= 10) {
            this.password = newPassword;
        } else {
            throw new TooLongPasswordException();
        }
    }
}




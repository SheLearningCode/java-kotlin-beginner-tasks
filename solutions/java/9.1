//New class Person
package com.company;

public class Person {
    String name;
    int age;
    float weight;
    float height;

    Person(String name, int age, float weight, float height) {
        this.name = name;
        this.age = age;
        this.weight = weight;
        this.height = height;
    }

    boolean checkMajority(int age) {
        return age >= 18;
    }

    public String toString(){
        return String.format("%s is %s years old, weighs %s kg and is %s cm tall.", name, age, weight, height);
    }

    //Getter and Setter
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public float getWeight() {
        return weight;
    }

    public void setWeight(float weight) {
        this.weight = weight;
    }

    public float getHeight() {
        return height;
    }

    public void setHeight(float height) {
        this.height = height;
    }
}

//Inside of the main method
Person person = new Person("Thomas Gottschalk", 67, 80.8, 178.6);
System.out.println(person);

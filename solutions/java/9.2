//New class Customer
package com.company;

public class Customer {
    private String firstName;
    private String name;
    private Address address;

    Customer(String firstName, String name, Address address) {
        this.firstName = firstName;
        this.name = name;
        this.address = address;
    }

    public String toString() {
        return "Customer: " + this.firstName + " " + this.name + this.address.toString();
    }
}

class Address {
    private String street;
    private int postcode;
    private String location;

    Address(String street, int postcode, String location) {
        this.street = street;
        this.postcode = postcode;
        this.location = location;
    }

    public String getLocation() {
        return this.location;
    }

    public void setLocation(String location) {
        this.location = location;
    }

    public String toString() {
        return "\nAddress: " + this.street + ", " + this.postcode + ", " + this.location;
    }
}

//Inside of the main method
Customer[] customers = new Customer[] {
        new Customer("Max", "Mustermann", new Address("Musterstr. 18", 32222, "Am See")),
        new Customer("Manfred", "Schmidt", new Address("Musterstr. 18", 32222, "City centre")),
        new Customer("Lisa", "Lee", new Address("Stuttgarter Weg 22", 23333, "Schlosspark"))
};

for (int i = 0; i < customers.length; i++) {
    System.out.println("\n__Customer No." + (i + 1) + "__");
    System.out.println(customers[i]);
}